<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="200.0" prefWidth="400.0" style="-fx-background-color: linear-gradient(#FFED00,#FF3900);" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="grafica.GiocaController">
